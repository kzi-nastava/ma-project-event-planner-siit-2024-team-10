<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" /> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="@color/brand_purple" /> <!-- Border color -->
    <corners android:radius="16dp" /> <!-- Corner radius -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" /> <!-- Padding inside the shape -->
</shape>
