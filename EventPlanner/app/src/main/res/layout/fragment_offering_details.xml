<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView for Service Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/service_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/makeup"
                    android:contentDescription="Service Image" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bridal hair and makeup"
                        android:textColor="#2d3748"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/offering_card_heart"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Favorite"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/heart_outline" />

                    <ImageButton
                        android:id="@+id/offering_card_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Offering Details"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_offering" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: $299"
                        android:textColor="#2d3748"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount: 10% off"
                        android:textColor="#2d3748"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textColor="#2d3748"
                        android:textSize="16sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@color/brand_purple_light"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Service Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Details"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category: Beauty"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 3 hours"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reservation Deadline: 3 months"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancellation Deadline: 3 months"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expert makeup and hair artists provide personalized beauty services to ensure the bride and bridal party look stunning on the big day."
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Provider Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="16dp"
                            android:background="#d0cfe1"
                            android:clipToOutline="true"
                            android:id="@+id/provider_profile_photo"
                            android:contentDescription="Provider Profile Photo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_photo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Beauty Elegance Studio"
                                android:id="@+id/provider_name"
                                android:textColor="#2d3748"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="123 Beauty Street, City, Country"
                                android:id="@+id/provider_address"
                                android:textColor="#4a5568"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="contact@beautyelegance.com"
                                android:id="@+id/provider_email"
                                android:textColor="#4a5568"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+1 (555) 123-4567"
                                android:id="@+id/provider_phone"
                                android:textColor="#4a5568"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_view_provider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Provider"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_contact_provider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add New Comment Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Your Review"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Rating Input -->
                    <RatingBar
                        android:id="@+id/new_comment_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_marginBottom="16dp"/>

                    <!-- Comment Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_comment_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Write your review here"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="6"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/submit_comment_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT REVIEW"
                        android:padding="12dp"
                        android:backgroundTint="@color/brand_purple"
                        android:textColor="@color/chocolate_brown"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Comment 1: Very positive review -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/comment_username1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Sarah Miller"/>

                        <RatingBar
                            android:id="@+id/comment_rating1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="5.0"
                            android:stepSize="0.5"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/comment_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Absolutely amazing experience! The makeup artist was incredibly skilled and listened to exactly what I wanted. My hair and makeup lasted all day and looked perfect in photos. The trial session was also very helpful in getting the perfect look. Highly recommend!"/>

                    <TextView
                        android:id="@+id/comment_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="2024-11-15"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Comment 2: Good but with some constructive feedback -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/comment_username2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Emma Thompson"/>

                        <RatingBar
                            android:id="@+id/comment_rating2"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.0"
                            android:stepSize="0.5"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/comment_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Good service overall. The makeup looked beautiful but I would have appreciated more time for the trial session to try different hairstyles. The final result was pretty, but scheduling was a bit inflexible. The touch-up kit provided was very helpful throughout the day."/>

                    <TextView
                        android:id="@+id/comment_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="2024-11-10"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Comment 3: Mixed experience -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/comment_username3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Lisa Chen"/>

                        <RatingBar
                            android:id="@+id/comment_rating3"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="0.5"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/comment_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="The makeup application was great and lasted well, but the hair styling didn't quite match what we discussed in the trial. Had to do some adjustments last minute which was stressful. The team was professional though and worked quick to fix it. Consider bringing reference photos to avoid any misunderstandings."/>

                    <TextView
                        android:id="@+id/comment_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="2024-11-01"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Edit and Delete Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit_offering_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:padding="8dp"
                    android:backgroundTint="@color/brand_purple"
                    android:textColor="@color/chocolate_brown"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/delete_offering_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DELETE"
                    android:padding="8dp"
                    android:backgroundTint="@color/chocolate_brown"
                    android:textColor="@color/brand_purple"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>