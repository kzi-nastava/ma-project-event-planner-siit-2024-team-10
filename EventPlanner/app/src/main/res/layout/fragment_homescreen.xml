<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/slogan_screen"
            layout="@layout/homepage_slogan"/>

        <TextView
            android:id="@+id/top_events_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/top_events_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <include
            layout="@layout/fragment_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/eventSearch"
            layout="@layout/all_events_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/backdrop">

            <include
                layout="@layout/fragment_event_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                layout="@layout/fragment_event_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/top_offerings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/top_offerings_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/topOfferings"
            layout="@layout/placeholder_offerings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/offeringSearch"
            layout="@layout/all_offerings_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/backdrop">

            <include
                layout="@layout/placeholder_offerings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                layout="@layout/placeholder_offerings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
