<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeScreenFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/tabTopEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_events_tab" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/tabAllEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_events_tab" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/tabTopOfferings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_offerings_tab" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/tabAllOfferings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_offerings_tab" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </HorizontalScrollView>

    <include
        android:id="@+id/eventSearchBar"
        layout="@layout/fragment_event_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/top_events_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/top_events_text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/charcoal_blue"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/top_offerings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/top_offerings_text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/charcoal_blue"
        android:visibility="gone"/>

    <include
        android:id="@+id/offeringSearchBar"
        layout="@layout/fragment_offering_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- TextView for "No events found" message -->
    <TextView
        android:id="@+id/noCardsFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:padding="16dp"
        android:text="@string/no_events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp" />


    <include
        android:id="@+id/paginationBar"
        layout="@layout/pagination_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />
</LinearLayout>
