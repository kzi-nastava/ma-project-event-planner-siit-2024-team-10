<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include filter layout -->
    <include
        android:id="@+id/offeringSearch"
        layout="@layout/all_events_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- RecyclerView for displaying offerings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <!-- Include pagination bar -->
    <include
        layout="@layout/pagination_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
