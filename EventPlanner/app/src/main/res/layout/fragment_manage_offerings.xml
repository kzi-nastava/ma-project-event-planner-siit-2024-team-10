<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.home.HomeScreenFragment">

    <TextView
        android:id="@+id/noCardsFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:padding="16dp"
        android:text="@string/no_offerings_found"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/offeringSearchBar"
        layout="@layout/fragment_offering_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp" />

    <include
        android:id="@+id/paginationBar"
        layout="@layout/pagination_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />

</LinearLayout>
