<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/homepage_slogan"
        android:id="@+id/homepageSlogan"/>

    <TextView
        android:id="@+id/top_events_text"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/top_events_text"
        app:layout_constraintTop_toBottomOf="@id/homepageSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/eventList"
        layout="@layout/fragment_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_events_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>